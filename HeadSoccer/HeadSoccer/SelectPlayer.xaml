<Window x:Class="HeadSoccer.SelectPlayer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HeadSoccer"
        mc:Ignorable="d"
        Title="SelectPlayer" Height="450" Width="800">

    <Grid>
        <Button x:Name="btnClown" HorizontalAlignment="Left" Margin="46,51,0,0" VerticalAlignment="Top" Width="111" Height="86" Click="btnClown_Click" >
            <Image Source="images/player1.png"></Image>
        </Button>
        <Button x:Name="btnPlayer1" HorizontalAlignment="Left" Margin="175,51,0,0" VerticalAlignment="Top" Width="111" Height="86" Click="btnPlayer1_Click">
            <Image Source="images/player2.png"></Image>
        </Button>

    </Grid>
</Window>
